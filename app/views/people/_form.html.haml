= form_for(@person) do |f|
  - if @person.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@person.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @person.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name_first
    %br
    = f.text_field :name_first
  .field
    = f.label :name_last
    %br
    = f.text_field :name_last
  .field
    = f.label :name_prefix
    %br
    = f.text_field :name_prefix
  .field
    = f.label :name_suffix
    %br
    = f.text_field :name_suffix

  .actions
    = f.submit
